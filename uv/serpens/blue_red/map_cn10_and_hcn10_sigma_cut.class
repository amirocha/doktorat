!CN
define double sigma
define double up
let sigma 5.491E-02
let up 5
set unit v
greg\pen /weight 2.75
set font duplex
set character 0.5
set plot histogram 

lut color
!LET LUT%HUE[I] = 16*INT((256-2*I)|16)
LET LUT%RED = 256
!lut lut


greg1\set plot landscape
set viewport 0.05 0.3 0.42 0.75
greg\set coord user
greg\set character 0.5
greg\pen /def

	 greg\column x 2 y 3 z 4 /file smm1_cn10_red_map_large.txt
    greg2\rgdata x y z /blank '3*sigma'
    greg\limits /rgdata /reverse x
    greg\level '5*sigma' to up by '10*sigma'
	greg\pen /colour 1
	greg\rgmap /abs

	greg\column x 2 y 3 z 4 /file smm1_cn10_blue_map_large.txt
    greg2\rgdata x y z /blank '3*sigma'
    greg\limits /rgdata /reverse x
    greg\level '5*sigma' to up by '10*sigma'
