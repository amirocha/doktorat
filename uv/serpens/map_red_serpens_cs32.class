define double l_new b_new

file in  "../spectraOdp.30m"

find /all
set source SERSMM1 
set line CS(3-2)
set frequency 146916 147022
find /all

file out serpens_cs32_red.30m single /overwrite

for i 1 to found
    get n
    set window -50 50
    modify beam_eff 0.73
    draw kill 457
    draw kill 458
    draw kill 459
    draw kill 461
    draw kill 464
    draw kill 465
    draw kill 1373
    draw kill 2285
    
    draw fill 457
    draw fill 458
    draw fill 459
    draw fill 461
    draw fill 464
    draw fill 465
    draw fill 1373
    draw fill 2285
    base 0
    write
next

