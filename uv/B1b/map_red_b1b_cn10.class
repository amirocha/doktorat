file in  "../spectraOdp.30m"

find /all
set source B1-B
set line CN(F1)(1-0)
!set frequency 146916 147022
find /all

file out b1b_cn10_red.30m single /overwrite

for i 1 to found
    get n
    modify beam_eff 0.78
    set window -50 50
    draw kill 460
    draw kill 461
    draw kill 462
    draw kill 2282
    draw kill 2281
    draw kill 2283
    draw kill 1373
    draw kill 2285
    
    
    draw fill 460
    draw fill 461
    draw fill 2282
    draw fill 2281
    draw fill 2283
    draw fill 462
    draw fill 1373
    draw fill 2285
    base 0
    write
next



