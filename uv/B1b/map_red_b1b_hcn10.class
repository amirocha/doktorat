define double l_new b_new

file in  "../spectraOdp.30m"

find /all
set source B1-B 
set line HCN(1-0)
set frequency 88580 88680
find /all

file out b1b_hcn10_red.30m single /overwrite

for i 1 to found
    get n
    modify beam_eff 0.81 
    set window -50 50
    draw kill 461
    draw kill 1373
    draw kill 2285
    draw kill 1374
    draw kill 1376
    draw kill 1375
    draw kill 1370
    draw kill 1371
    draw kill 1372

    draw fill 461
    draw fill 1373
    draw fill 2285
    draw fill 1374
    draw fill 1376
    draw fill 1375
    draw fill 1370
    draw fill 1371
    draw fill 1372

    base 0
    write
next


